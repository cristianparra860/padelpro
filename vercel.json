{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "prisma generate && next build",
  "installCommand": "npm install",
  "env": {
    "DATABASE_URL": "@database_url",
    "NODE_ENV": "production"
  },
  "crons": [
    {
      "path": "/api/cron/generate-cards?days=7",
      "schedule": "0 0 * * *"
    }
  ]
}
